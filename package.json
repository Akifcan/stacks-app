{
  "name": "hello-world",
  "version": "1.0.0",
  "description": "hello world smart contract example",
  "type": "module",
  "scripts": {
    "test": "vitest run -- --manifest-path ./Clarinet.toml",
    "test:reports": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"unit-tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm t\"",
    "test:all": "vitest run tests/all-contracts.test.ts -- --manifest-path ./Clarinet.toml",
    "test:integration": "vitest run tests/integration.test.ts -- --manifest-path ./Clarinet.toml",
    "deploy:testnet": "tsx scripts/deploy-testnet.ts",
    "deploy:mainnet": "tsx scripts/deploy-mainnet.ts",
    "initialize:testnet": "STACKS_NETWORK=testnet tsx scripts/initialize-contracts.ts",
    "initialize:mainnet": "STACKS_NETWORK=mainnet tsx scripts/initialize-contracts.ts",
    "build": "tsc --noEmit"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hirosystems/clarinet-sdk": "^3.0.1",
    "@stacks/transactions": "^7.0.6",
    "@stacks/network": "^7.0.6",
    "@types/node": "^22.15.17",
    "chokidar-cli": "^3.0.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^3.1.3",
    "vitest-environment-clarinet": "^2.3.0"
  }
}
